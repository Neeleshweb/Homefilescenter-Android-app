<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/comeonman"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/a"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/bestback"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.homefilescenter.dynamicrankingplatform.mega.homefilescenterofficial.Contactus">

        <TextView
            android:id="@+id/contact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="GENERAL INFO:"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview2"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="Mob no:8130033890,8285990249"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/contact3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="Email id:neelesh.1234h@homefilescenter.com,neelesh.homefilescenter14@gmail.com"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/contact7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="SOCIAL INFO:"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/contact4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="CLICK TO VIEW ON LINKEDIN"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/button_pressed"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/contact5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="CLICK TO VIEW ON FACEBOOK"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/button_focused"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/contact6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="CLICK TO LISTEN ON SMULE Sing"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/button_disabled"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/contact8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#d80000"
            android:textSize="19dp"
            android:text="CLICK TO VIEW ON YOUTUBE"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/button_enabled"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bestback"

    android:id="@+id/testing"
    android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.homefilescenter.dynamicrankingplatform.mega.homefilescenterofficial.Customcategorydesc"
        android:id="@+id/test1">


        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="30dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="FINAL INSTRUCTIONS BEFORE THE TEST"

            android:background="@drawable/textview"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="1)-One mark for each question with no negative marking."

            android:background="@drawable/textview2"
            android:layout_marginTop="50dp"/>


        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="2)-The total no of questions will be 15,hence max marks=15."

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="3)-Once attempted and clicked next,you cannot change your choice."

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="4)-If your score is 10 or more your category will be added and you can give your reviews on it,otherwise better luck next time!!"

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="5)-Max alloted time for the test is 5 mins."

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="6)-If time exceeds 5 mins,test will be cancelled."

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="25dp"

            android:padding="16dp"
            android:gravity="center"
            android:text="7)-The more no of categories you add by passing the test,the more will be your points."

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEGIN THE TEST"
            style="@style/TextColor"
            android:textSize="30sp"
            android:id="@+id/test50"
            android:background="@drawable/button_pressed"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
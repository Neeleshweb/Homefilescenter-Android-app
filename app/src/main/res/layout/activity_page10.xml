<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bestback2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.homefilescenter.dynamicrankingplatform.mega.homefilescenterofficial.Page10">

    <TextView
        android:id="@+id/page10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#000000"
        android:textSize="19dp"
        android:text="WHICH DO YOU THINK IS THE MOST SIGNIFICANT REASON WE ARE ASKING YOU TO ADD CATEGORIES"
        android:padding="16dp"
        android:gravity="center"

        android:background="@drawable/textview"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview2"
        android:id="@+id/r10"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Just for fun"
            android:id="@+id/radioButton37"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="To guide people to invest money reasonably"
            android:id="@+id/radioButton38"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="To let people know which item is cheapest for them"
            android:id="@+id/radioButton39"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="To let people know which item is best for them"
            android:id="@+id/radioButton40"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/b10"
        android:background="@drawable/button_pressed"
        android:layout_margin="@dimen/activity_vertical_margin"

        android:layout_gravity="center_horizontal" />

</LinearLayout>

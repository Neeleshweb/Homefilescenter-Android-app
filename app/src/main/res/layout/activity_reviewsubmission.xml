<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bestback"
    android:id="@+id/scrollView"
    android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.homefilescenter.dynamicrankingplatform.mega.homefilescenterofficial.Reviewsubmission"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textView01"
            style="@style/TextColor"
            android:layout_alignParentTop="true"



            />
        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="NAME OF THE PRODUCT"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:hint=""

            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="NAME OF THE PRODUCT ALONGWITH THE REASON OF WHY YOU CHOOSE IT OR REJECT IT"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#494949"
            android:textSize="19dp"
            android:hint="start typing here...."
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="GIVE NO OF STARS"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="50dp"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview2"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            style="@style/TextColor"
            android:id="@+id/ratingBar"
            android:layout_below="@+id/textView24"


            />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="19dp"
            android:text="ENTER YOUR E-MAILID"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/editText0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#494949"
            android:textSize="19dp"
            android:hint="start typing here..."
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textview2"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="SUBMIT YOUR REVIEW"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_disabled"
            style="@style/TextColor"
            android:id="@+id/but"
            />


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bestback2">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bestback"
        >



    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">



        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textColor="#d80000"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-05dp">


                <EditText
                    android:id="@+id/fullname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview2"
                    android:layout_marginTop="50dp"
                    android:hint="Name"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/user"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawablePadding="16dp">
                </EditText>

                <AutoCompleteTextView
                    android:id="@+id/email1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview2"
                    android:layout_marginTop="20dp"
                    android:hint="Email"

                    android:textColorHint="#000000"
                    android:drawableLeft="@drawable/email"
                    android:paddingLeft="20dp"
                    android:drawablePadding="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"

                    >
                </AutoCompleteTextView>

                <EditText
                    android:id="@+id/password1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview2"
                    android:layout_marginTop="20dp"
                    android:hint="Password"
                    android:textColorHint="#000000"

                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/pass"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawablePadding="16dp">
                </EditText>

                <EditText
                    android:id="@+id/city"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview2"
                    android:layout_marginTop="20dp"
                    android:hint="City"
                    android:textColorHint="#000000"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_menu_gallery"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawablePadding="16dp">
                </EditText>
                <EditText
                    android:id="@+id/Mobno"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview2"
                    android:layout_marginTop="20dp"
                    android:hint="Mob no"
                    android:textColorHint="#000000"
                    android:inputType="text"
                    android:drawableLeft="@drawable/email"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawablePadding="16dp">
                </EditText>
                <Button
                    android:id="@+id/email_sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign UP"

                    android:textColor="#494949"
                    android:textSize="19dp"
                    android:layout_above="@+id/terms"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_pressed"
                    />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>



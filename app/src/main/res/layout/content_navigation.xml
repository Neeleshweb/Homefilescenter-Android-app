<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bestback2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bestback2"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.homefilescenter.dynamicrankingplatform.mega.homefilescenterofficial.Homepage"
        tools:showIn="@layout/app_bar_navigation">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:id="@+id/mycustomlayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:text="WELCOME TO WORLD'S 1st DYNAMIC RANKING PLATFORM"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/textview"
android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro"
                    android:layout_weight="0.07" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp">

                <Button

                    android:text="SIGN UP NOW->->"
                    android:textSize="20dp"
                    android:layout_width="284dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_height="50dp"
                    android:background="@drawable/button_disabled"
                    android:id="@+id/button"

                    />

                <Button

                    android:text="LOGIN->->"
                    android:textSize="20dp"
                    android:layout_width="284dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:layout_height="50dp"
                    android:background="@drawable/button_disabled"
                    android:id="@+id/button3"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#ffffff"
                android:textSize="23dp"

                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textDirection="firstStrong"
                android:text="This app provides you the facility to rate different categories of items.The maximum ratings to item shows the better quality of its existense.If you rank the product more appropriately then accordingly your rank on the leaderboard will be improved and top 500 rankers will be rewarded once in a year.So start today and enter the competion.Also We recommend you to buy those products only which has good reviews and ratings on our app as you will believe no one but the users of that product.Its better to invest some money for quality items,so before buying,please checkout its rating on our app and also the rank of the user who has rated it,the higher rank user(under 500) rated it positive,the better will be product.HAPPY PURCHASING!!!"


                android:background="@drawable/bestback"
                android:layout_marginTop="310dp"/>




        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoclick"
            android:layout_marginTop="20dp"

            android:text="WATCH LIVE DEMO NOW"

            android:background="@drawable/button_disabled"
            android:textColor="#000000"
            android:textStyle="bold"
            />



    </LinearLayout>
</ScrollView>